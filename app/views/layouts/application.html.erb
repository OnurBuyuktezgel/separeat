<!DOCTYPE html>
<html>
  <head>
    <title>Separeat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' data-turbolinks-track="reload" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body style="background-color: #f6f4e6">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="container pb-5">
      <div class="body mb-5" style="margin-top: 56px;">
        <%= yield %>
      </div>
    </div>
    <div class="footer-container"><%= render "shared/footer" %></div>
  </body>
</html>
